<header class="w-full navbar">
  <div class="flex justify-between items-center w-full">
    <div class="flex-1 px-2">
      <%= link_to root_path do %>
        <%= image_tag 'logo.png', class: "logo rounded-lg hover:bg-slate-200", size: "100x100" %>
      <% end %>
    </div>
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost rounded-btn text-lg text-slate-600 hover:bg-slate-200">Menu</div>
        <ul tabindex="0" class="menu dropdown-content z-[1] p-2 shadow bg-base-100 rounded-box w-52 mt-4">
          <li>
            <%= link_to t('navbar.post'), new_park_report_path, class: "text-park font-semibold hover:bg-slate-200 rounded-lg px-4 py-2" %>
          </li>
          <li>
            <%= link_to t('navbar.search'), search_path, class: "text-park font-semibold hover:bg-slate-200 rounded-lg px-4 py-2" %>
          </li>
          <li>
            <%= link_to t('navbar.new_user'), new_user_registration_path, class: "text-park font-semibold hover:bg-slate-200 rounded-lg px-4 py-2" %>
          </li>
          <li>
            <%= link_to t('navbar.login'), new_user_session_path, class: "text-park font-semibold hover:bg-slate-200 rounded-lg px-4 py-2" %>
          </li> 
        </ul>
      </div>
    </div>
  </div>  
</header>