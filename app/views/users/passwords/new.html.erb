<% content_for(:title, t('.title')) %>
<div class="flex-grow container mx-auto px-6 py-5">
  <div class="flex justify-center items-center">
    <h2 class="text-2xl md:text-3xl lg:text-4xl text-park text-center font-bold pb-5 px-8 border-b-2 border-park">
      <%= User.human_attribute_name(:password) %>リセット申請
    </h2>
  </div>
  <div class="flex justify-center items-center py-10">
    <div class="card w-96 bg-base-100 shadow-xl">
      <div class="card-body">
        <div class="flex flex-col">
          <%= form_with scope: resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <div class="mt-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "py-3 px-5 mt-1 block w-full placeholder-gray-400 border-2 border-primary rounded-lg", placeholder: "ご登録のメールアドレスを入力" %>
            </div>
            <div class="mt-8">
              <button type="submit" class="btn btn-primary w-full">
                <%= f.submit "実行" %>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= link_to 'ログイン画面に戻る', new_user_session_path, class: "text-park hover:bg-slate-200 rounded-lg px-4 py-2" %>
  </div>
</div>